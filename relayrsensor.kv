<Label>:
    color: 0, 0, 0, 1

<MainWidget>:
    Label:
        text: "Waiting for connection..."


<DeviceWidget>:
    name_label: name_label.__self__
    sensor_container: sensor_container.__self__
    orientation: 'vertical'
    Label:
        id: name_label
        size_hint_y: .2
    BoxLayout:
        id: sensor_container

<SensorWidget>:
    meaning_label: meaning_label.__self__
    value_label: value_label.__self__
    last_update_label: last_update_label.__self__
    spacing: dp(10)
    canvas.before:
        Color:
            rgba: self.color
        Line:
            circle: [self.center_x, self.center_y, min(self.width, self.height) / 2 - self.spacing - dp(10)]
            width: dp(10)
    Label:
        id: meaning_label
    Label:
        id: value_label
    Label:
        id: last_update_label
